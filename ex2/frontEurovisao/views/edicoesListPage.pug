extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 
                span Edições da Eurovisão

        .w3-container
            if edicoes && edicoes.length > 0
                table.w3-table-all
                    tr
                        th Id
                        th Ano da Edição
                        th País Organizador
                        th País Vencedor
                    each edicao in edicoes
                        tr
                            td
                                a(href="/" + edicao.id)= edicao.id
                            td= edicao.anoEdicao
                            td
                                a(href="/paises/" + encodeURIComponent(edicao.organizacao))= edicao.organizacao
                            td
                                a(href="/paises/" + encodeURIComponent(edicao.vencedor))= edicao.vencedor
            else
                p Nenhuma edição encontrada.

    footer.w3-container.w3-teal
        p Meta Information: Gerado em #{new Date().toLocaleDateString()} às #{new Date().toLocaleTimeString()}